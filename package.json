{
  "name": "@tsdotnet/random",
  "version": "1.0.16",
  "description": "A utility for simplifying generating random numbers and shuffling arrays. ",
  "author": "electricessence",
  "license": "MIT",
  "types": "dist/random.d.ts",
  "main": "dist/random.js",
  "module": "dist-esm/random.js",
  "keywords": [
    "random",
    "randomize",
    "random numbers",
    "random integers",
    "shuffle",
    "array shuffle",
    "shuffle arrays",
    "select random",
    "random select"
  ],
  "scripts": {
    "build:dist": "rimraf dist/* && tsc && copyfiles -u 1 src/**/*.d.ts dist",
    "build:dist-esm": "rimraf dist-esm/* && tsc -p tsconfig.esm.json",
    "build": "pnpm i && pnpm run build:dist && pnpm run build:dist-esm",
    "bump": "npm run-script precommit && npm version patch",
    "docs": "rimraf docs/* && typedoc --options typedoc.json --readme none",
    "lint": "eslint src/**/*.ts",
    "precommit": "pnpm i && run-p lint test && run-p build:* && npm run-script validate && git status -s",
    "prepublishOnly": "npm run-script build && run-p validate test",
    "preversion": "run-p lint test",
    "postversion": "git push && git push --tags && npm run-script docs && git add -A && git commit -m \"Updated docs.\" docs && git push",
    "test": "mocha -r ts-node/register tests/**/*.ts",
    "validate": "node ./.build/validate-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/random.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/random/issues"
  },
  "homepage": "https://github.com/tsdotnet/random#readme",
  "devDependencies": {
    "@tsdotnet/common-interfaces": "^1.0.4",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.30.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.23",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@tsdotnet/array-copy": "^1.0.18",
    "@tsdotnet/array-init": "^1.0.11",
    "@tsdotnet/integer": "^1.0.15",
    "tslib": "^2.4.1"
  }
}
