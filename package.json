{
  "name": "@tsdotnet/random",
  "version": "1.0.13",
  "description": "A utility for simplifying generating random numbers and shuffling arrays. ",
  "author": "electricessence",
  "license": "MIT",
  "types": "dist/random.d.ts",
  "main": "dist/random.js",
  "module": "dist-esm/random.js",
  "keywords": [
    "random",
    "randomize",
    "random numbers",
    "random integers",
    "shuffle",
    "array shuffle",
    "shuffle arrays",
    "select random",
    "random select"
  ],
  "scripts": {
    "build:dist": "rimraf dist/* && tsc && copyfiles -u 1 src/**/*.d.ts dist",
    "build:dist-esm": "rimraf dist-esm/* && tsc -p tsconfig.esm.json",
    "build": "pnpm i && run-p build:*",
    "bump": "npm run precommit && npm version patch",
    "docs": "rimraf docs/* && rimraf docs/.nojekyll && typedoc --options typedoc.json --readme none",
    "lint": "eslint src/**/*.ts",
    "precommit": "pnpm i && run-p lint test && run-p build:* && npm run validate && git status -s",
    "prepublishOnly": "npm run build && run-p validate test",
    "preversion": "run-p lint test",
    "postversion": "git push && git push --tags && npm run docs && git commit -m \"Updated docs.\" docs && git push",
    "test": "mocha -r ts-node/register tests/**/*.ts",
    "validate": "node ./.build/validate-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/random.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/random/issues"
  },
  "homepage": "https://github.com/tsdotnet/random#readme",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "^7.24.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@tsdotnet/array-copy": "^1.0.15",
    "@tsdotnet/array-init": "^1.0.11",
    "@tsdotnet/integer": "^1.0.12",
    "tslib": "^2.2.0"
  }
}
